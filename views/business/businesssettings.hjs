<!DOCTYPE html>
<html>
  <head>
      <title>{{ title }}</title>
      <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
      <link rel='stylesheet' href='/stylesheets/style.css'/>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
      <script src="/javascripts/setting.js"></script>
  </head>
  <body>

    
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default"style=" background-color: #90EE90; background: rgba(255, 255, 255, 0.8);
                                              box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
                                              color: #4e5d6c;">

          <div class="panel-heading" style=" background-color:#708090">
            <h1 style="text-align:center"><font style="color:white">Account Settings</font></h1>
            <p style="text-align:center"><font style="color:white">Configure other parts of your account</font></p>
            <!-- {{#error}} -->
                <div class="alert alert-danger" role="alert">
                    <p id = "error"></p>
                </div>
            <!-- {{/error}} -->
            <div>
                <label style="color:white; text-align:center"> this is error</label>
              </div>
          </div>
          <div class="panel-body"style=" background-color: #708090">
            <form role="form">
              
              
              <div class="row">
                <div class="col-md-8 col-md-offset-2">
                  <div class="panel panel-default">
                    <div class="panel-heading"style=" background-color: #42444F" >
                      <h3 class="panel-title" ><font style="color:white">Account Info</font></h3>
                      <p class="panel-title"><font style="color:white">Click to Edit</font></p>
                    </div>
                    <div class="panel-body">

                      <form class="form-horizontal" action="" method="put" enctype="application/x-www-form-urlencoded">
                        <div class="row">
                          <div class="col-xs-12 col-sm-12 col-md-12">

                            <div class="form-group">
                               <label for="email">Company Name</label>
                              <input type="text" id="companyName" name="company_name" class="form-control input-lg" value="{{companyName}}" required>
                              <p id="message"></p>
                          </div>

                          </div>
                        </div>
                        <div class="row">
                          <div class="col-xs-12 col-sm-12 col-md-12">

                            <div class="form-group">
                              <label>Phone Number </label>
                              <input type="text" id="phone" name ="phone"class="form-control input-lg" value="{{phone}}">
                          </div>

                          </div>
                        </div>

                        <div class="form-group">
                          <label>Admin Email </label>
                          <input type="email" id="email" name="email" class="form-control input-lg" value="{{email}}">
                        </div>

                        <button  id="name" type="button" onclick="putData()" class="btn btn-success btn-block">Save
                        </button>

                      </form>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class ="col-md-8 col-md-offset-2">
                  <div class="panel panel-default">
                    <div class="panel-heading"style=" background-color: #42444F">
                      <h3 class="panel-title"><font style="color:white">Admin Password</font></h3>
                    </div>
                    <div class="panel-body">
                      <form class="form" action="" method="put" enctype="application/x-www-form-urlencoded">
                         <div class="row">
                          <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                              <label>Old Password </label>
                              <input type="password" id="old_password" class="form-control input-lg" value="{{old_password}}" placeholder="Password">
                            </div>
                          </div>
                         </div>
                         <div class="row">
                          <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                              <label>New Password </label>
                              <input type="password" id="new_password" class="form-control input-lg" value="{{new_password}}" placeholder="New Password">
                            </div>
                          </div>
                         </div>
                         <div class="row">
                          <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                              <label>Confirm Password </label>
                              <input type="password" id="confirm_password" class="form-control input-lg" value="{{confirm_password}}" placeholder="Confirm Password">
                            </div>
                          </div>
                        </div>
                        <button type="button"  id ="psw" onclick="putPsw()" name="psw" class="btn btn-success btn-block"> save</button>

                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>